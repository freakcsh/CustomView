<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.freak.customview.MainActivity">

    <com.freak.customview.custom.CustomToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customLeftBackground="@drawable/ic_arrow_back_black"
        app:customLeftColor="#999999"
        app:customLeftTitle="返回按钮"
        app:customLeftTitlePaddingLeft="20dp"
        app:customRightBackground="@drawable/ic_arrow_back_black"
        app:customRightTitle="提交"
        app:customRightTitlePaddingRight="20dp"
        app:customTitle="测试标题"
        app:customTitleColor="#000000"
        tools:ignore="MissingConstraints" />

    <com.freak.customview.custom.CustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:editTextHint="测试113"
        app:titleText="测试"
        tools:ignore="MissingConstraints" />

    <com.freak.customview.custom.CustomSeekBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:progressColor="#000000"
        app:sProgressColor="@color/colorPrimary"
        app:textSize="25sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存图片"
        android:onClick="saveOnClick"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看图片"
        android:onClick="lookOnClick"/>
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"/>
</LinearLayout>
